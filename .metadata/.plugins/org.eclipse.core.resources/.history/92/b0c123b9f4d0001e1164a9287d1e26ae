package com.JavaBasico.semana1.Dia4.Ejercicio2;

public class prueba {

    public static void main(String[] args) {
        // Crear un vector de tipo Persona con cinco posiciones
        Persona[] personas = new Persona[5];

        // Crear cinco personas y guardarlas en el vector
        personas[0] = new Persona(1, "Juan", 25, "Calle A", "123456789");
        personas[1] = new Persona(2, "María", 35, "Calle B", "987654321");
        personas[2] = new Persona(3, "Carlos", 40, "Calle C", "111222333");
        personas[3] = new Persona(4, "Ana", 28, "Calle D", "444555666");
        personas[4] = new Persona(5, "Pedro", 45, "Calle E", "777888999");

        // Mostrar por pantalla el nombre y edad de cada persona almacenada
        System.out.println("Información antes del cambio:");
        for (Persona persona : personas) {
            System.out.println("Nombre: " + persona.getNombre() + ", Edad: " + persona.getEdad());
        }

        // Cambiar el nombre de dos personas
        personas[0].setNombre("Juan Modificado");
        personas[3].setNombre("Ana Modificada");

        // Mostrar por pantalla el después de los datos de las dos personas cuyos nombres fueron cambiados
        System.out.println("\nInformación después del cambio:");
        for (Persona persona : personas) {
            System.out.println("Nombre: " + persona.getNombre() + ", Edad: " + persona.getEdad());
        }

        // Mostrar solo la información de los nombres modificados
        System.out.println("\nNombres modificados:");
        for (Persona persona : personas) {
            if (!persona.getNombre().equals(persona.getNombreOriginal())) {
                System.out.println("Nombre anterior: " + persona.getNombreOriginal() + ", Nuevo nombre: " + persona.getNombre());
            }
        }

        // Mostrar por pantalla únicamente a las personas cuya edad sea mayor de 30 años
        System.out.println("\nPersonas mayores de 30 años:");
        for (Persona persona : personas) {
            if (persona.getEdad() > 30) {
                System.out.println("Nombre: " + persona.getNombre() + ", Edad: " + persona.getEdad());
            }
        }
    }
}
