	// a) Declarar variables y asignar valores
        int edad = 7;
        double peso = 64;
        boolean booleano = true;
        String saludo = "Hola mundo!";

      
        System.out.println("a) Valores iniciales:");
        System.out.println("Entero: " + edad);
        System.out.println("Decimal: " + peso);
        System.out.println("Booleano: " + booleano);
        System.out.println("Texto: " + saludo);

        // b) Asignar valores incorrectos y observar resultados
        edad = "Esto es un error"; // Intento de asignar un String a un int
        peso = "Otro error"; // Intento de asignar un String a un double
        booleano = 42; // Intento de asignar un entero a un boolean
        saludo = 123; // Intento de asignar un entero a un String

        // Mostrar contenido después de asignar valores incorrectos
        System.out.println("\nb) Valores con asignaciones incorrectas:");
        System.out.println("Entero: " + entero);
        System.out.println("Decimal: " + decimal);
        System.out.println("Booleano: " + booleano);
        System.out.println("Texto: " + texto);

        // Discusión:
        // - Los errores en las asignaciones ocurren cuando se intenta asignar un tipo de dato incompatible.
        // - El programa no compilará si se intenta asignar un tipo incorrecto al declarar la variable.
        // - En tiempo de ejecución, un error ocurrirá si se intenta cambiar el tipo de dato de una variable.
        
