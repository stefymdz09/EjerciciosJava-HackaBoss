package com.JavaBasico.semana1.Dia2;

import java.util.Scanner;

/**
 * Ejercicios de Introducción a Java
 *
 * @author Stefany
 */
public class Ejercicio4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		/*
		 * Ejercicio Nº 4 - Operaciones de Lectura - Grupal
		 * 
		 * Crea un programa que pida al usuario que ingrese por teclado dos números
		 * enteros y realice las siguientes operaciones con ellos: suma, resta,
		 * multiplicación y división. Muestra por pantalla/consola los resultados de
		 * cada una de las operaciones con un mensaje amigable para el usuario.
		 */

		Scanner scanner = new Scanner(System.in);

		// Solicitar al usuario que ingrese dos números enteros
		System.out.println("-----------------------------------------------------------------------------");
		System.out.println("Hola ! vamos a realizar unas operaciones ingresando dos numeros enteros");
		System.out.print("Ingresa el primer numero entero: ");
		int numero1 = scanner.nextInt();

		System.out.print("Ingresa el segundo numero entero: ");
		int numero2 = scanner.nextInt();

		// Solicitar al usuario que elija una operación
		System.out.println("-----------------------------------------------------------------------------");
		System.out.println("Elige una operación:");
		System.out.println("-----------------------------------------------------------------------------");
		System.out.println("1. Suma");
		System.out.println("2. Resta");
		System.out.println("3. Multiplicacion");
		System.out.println("4. Division");
		System.out.println("5. Mostrar todos los resultados");
		System.out.println("-----------------------------------------------------------------------------");

		int opcion = scanner.nextInt();

		// Realizar la operacion segun el numero-opcion elegida o mostrar el resultado
		// de todas con la opcion 5
		switch (opcion) {

		case 1:
			int suma = numero1 + numero2;
			System.out.println("El resultado de la suma: " + numero1 + " + " + numero2 + " es " + suma);
			break;
		case 2:
			int resta = numero1 + numero2;
			System.out.println("El resultado de la resta: " + numero1 + " - " + numero2 + " es " + resta);
			break;
		case 3:
			int multiplicacion = numero1 * numero2;
			System.out.println(
					"El resultado de la multiplicación: " + numero1 + " * " + numero2 + " es " + multiplicacion);
			break;
		case 4:
			// Manejar la división con posible excepción de división por cero
			double division = 0.0;
			try {
				division = (double) numero1 / numero2;
				System.out.println("División: " + division);
			} catch (ArithmeticException e) {
				System.out.println("Error: " + e.getMessage());
			}
			break;
		case 5:
			// Mostrar todos los resultados
			System.out.println("Resultados de todas las operaciones:");
			System.out.println("Suma: " + (numero1 + numero2));
			System.out.println("Resta: " + (numero1 - numero2));
			System.out.println("Multiplicación: " + (numero1 * numero2));

			// Manejar la división con posible excepción de división por cero
			double divisionTodos = 0.0;
			try {
				divisionTodos = (double) numero1 / numero2;
				System.out.println("División: " + divisionTodos);
			} catch (ArithmeticException e) {
				System.out.println("Error en división: " + e.getMessage());
			}
			break;
		default:
			System.out.println("Opción no válida");
		}

		scanner.close();

	}

}
